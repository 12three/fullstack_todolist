h3.center-align= title
.row
    .card-panel.col.s8.offset-s2(style="position: relative")
        .row
            form.col.s8.offset-s2(style="padding-top: 35px" method="POST" name= title.toLowerCase())
                .progress.hide#loader(style="position: absolute; margin: 0; top: 0; left: 0; right: 0; border-radius: 0")
                    .indeterminate
                .row
                    .input-field.col.s12
                        input#username.validate(type='text' name="username")
                        label(for='username') Username
                        span.error-container.helper-text(data-error="wrong")
                .row
                    .input-field.col.s12
                        input#password.validate(type='password' name="password")
                        label(for='password') Password
                        span.error-container.helper-text(data-error="wrong")
                div.center-align
                    button#submitButton.btn.waves-effect.waves-light.btn-large(type='submit')
                        | Submit
                        i.material-icons.right send